# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
DB_NAME=Sala

# JWT Secret Key (Change this to a secure random string in production)
JWT_SECRET=your-secret-key-change-this-in-production

# Twilio SMS Configuration (Optional - uses mock mode if not provided)
# Get these from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Force mock SMS mode even if Twilio credentials are provided
# Set to 'true' for development/testing, 'false' for production
USE_MOCK_SMS=true
